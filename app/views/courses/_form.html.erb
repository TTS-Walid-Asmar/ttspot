<%= form_for @course do |f| %>
<form class="form-horizontal">

  <div class="form-group">
    <%= f.label "Course:"%>
    <%= f.select :offering_id, options_from_collection_for_select(Offering.all, :id, :title)%>
  </div>

  <div class="form-group">
    <%= f.label :city %>:
    <%= f.select :city_id, options_from_collection_for_select(City.all, :id, :name)%>
  </div>

  <div class="form-group">
    <%= f.label :season%>:
    <%= f.text_field :season, class: "form-control", placeholder: "Ex: Summer" %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Start Date:"%>
    <%= f.date_field :starts, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "End Date:"%>
    <%= f.date_field :ends, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :start_time %>:
    <%= f.time_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>:
    <%= f.time_field :end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :office_name %>:
    <%= f.text_field :office_name, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.label :street_address%>:
      <%= f.text_field :street_address, class: "form-control" %>
   </div>

    <div class="form-group">
      <%= f.label :zip_code%>:
      <%= f.number_field :zip_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :active %>: <%= f.check_box :active %>
    </div>

    <div class="form-group">
      <%= f.hidden_field :instructor_id, value: (@course.new_record? ? current_user.id : @course.instructor_id) %>
    </div>
  <%= f.submit %>
</form>
<% end %>
